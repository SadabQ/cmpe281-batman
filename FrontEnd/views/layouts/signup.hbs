<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h1>Register</h1>
        <hr>
        {{#if hasErrors}}
            <div class="alert alert-danger">
                {{#each messages}}
                    <p>{{this}}</p>
                {{/each}}
            </div>
        {{/if}}
        <form action="/user/signup" method="post">
            <div class="form-group">
                <label for="email"><i class="fa fa-at"></i> E-Mail</label>
                <input type="text" placeholder="you@example.com" class="form-control" id="email" name="email" required autofocus>
            </div>
            <div class="form-group">
                <label for="password"><i class="fa fa-key"></i> Password</label>
                <input type="password" placeholder="Enter Password" class="form-control" id="password" name="password" required>
            </div>
            <div class="form-group">
                <label><b><i class="fa fa-repeat"></i> Repeat Password</b></label>
                <input type="password" placeholder="Repeat Password" class="form-control" name="psw-repeat" required ><br>
                <input type="checkbox" checked="checked"> Remember me

            </div>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <input type="hidden" name="_csrf" value="{{csrfToken}}">
                    <button type="submit" class="btn btn-success"><i class="fa fa-user-plus"></i> Register</button>
                </div>
            </div>
        </form>
    </div>
</div>